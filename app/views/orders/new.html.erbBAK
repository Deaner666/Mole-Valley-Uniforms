<h1><%= @title %></h1>

<%= semantic_form_for @order do |f| %>
  <%= f.inputs :name => 'Branch Details' do %>
    <%= f.input :branch, :label => "Branch Ref.",
                         :required => true %>
  <% end %>
  <%= f.semantic_fields_for :line_items do |li| %>
    <%= li.input :product_id, :as => :string, :value => 3 %>
    <%= li.input :quantity, :label => "Product Name" %>
  <% end %>
  <%= f.buttons %>
<% end %>