<article class="product-entry">
  <table>
    <tr>
      <th colspan="3">
        <%= label_tag :product_id, product.name %>
        <% if product.sizes.count > 0 %>
          &nbsp; - &nbsp;
          <%= select_tag :size, options_for_select(product.sizes.collect{ |p| p.name }) %>
        <% end %>
        - <%= format_price product.price if product.price %>
      </th>
    </tr>
    <%= hidden_field_tag :product_id, product.id %>
    <%= hidden_field_tag :order_id, @order.id %>
    <tr>
      <td class="image">
        <% unless product.image =~ /missing/ %>
          <%= image_tag product.image.url(:thumbnail), :alt => product.name %>
        <% end %>
      </td>
      <td class="quantity">
        <%= label_tag :quantity, "Quantity" %>
        <%= text_field_tag :quantity, 1 %>
      </td>
      <td class="add-button"><%= primary_add_pill_button_tag "Add to order" %></td>
    </tr>
  </table>
  
</article>